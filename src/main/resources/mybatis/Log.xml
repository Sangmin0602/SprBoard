<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Log">

	<resultMap type="Log" id="LogMapper">
		<id property="id" column="id"/>
		<result property="userId" column="userid" />
		<result property="createDate" column="createdate" />
		<result property="content" column="content" />
		<result property="operation" column="operation" />
	</resultMap>
	
	<sql id="LogSQL">
		userid,createdate,content,operation
	</sql>
	
	<insert id="insert" parameterType="spr.board.model.Log" useGeneratedKeys="true" keyProperty="id"  keyColumn="id">
		insert into t_log(<include refid="LogSQL"/>) value(#{userId},NOW(),#{content},#{operation})
	</insert>
	
</mapper>